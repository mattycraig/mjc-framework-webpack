								span.required *
							.radio
								label
									input(
										type='radio'
										required
										name='prospectiveexisting'
										value='prospective'
									)
									.radio-custom
									span.radio-label Option 1
								label
									input(
										type='radio'
										required
										name='prospectiveexisting'
										value='existing'
										disabled
										checked
									)
									.radio-custom
									span.radio-label Option 2 (disabled checked)
