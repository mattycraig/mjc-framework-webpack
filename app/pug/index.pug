								span.required *
							.checkbox
								label
									input(type='checkbox')
									.checkbox-custom
									span.checkbox-label Check me out
								label
									input(type='checkbox' disabled checked)
									.checkbox-custom
									span.checkbox-label Check me out (disabled checked)
						.form-group
							label
