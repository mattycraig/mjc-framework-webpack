									name='email'
								)
							.form-control-feedback Success!
						.form-group.has-warning
							label(for='login-email')
								| Has Error + Addon
								span.required *
							.input-group
								span.input-group-addon
									i.fa.fa-user
								input#login-email.form-control(
									type='email'
									placeholder='myemail@email.com'
									required
									name='email'
								)
							.form-control-feedback Warning!
						.form-group
							label(for='exampleInputPassword1')
								| Regular Input
								span.required *
							input#exampleInputPassword1.form-control(type='text', placeholder='Something...')
						.form-group.has-loading
							label(for='exampleInputPassword1')
								| Has Loading
								span.required *
							input#exampleInputPassword1.form-control(type='text', placeholder='Something...')
