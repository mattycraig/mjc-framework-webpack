							label(for='exampleInputPassword1')
								| Password (Disabled)
								span.required *
							input#exampleInputPassword1.form-control(type='password', placeholder='Password' disabled)
						.form-group
							label(for='exampleInputPassword1')
								| Custom Select
								span.required *
							select.custom-select
								option(selected disabled) Select...
								option(value='1') One
								option(value='2') Two
								option(value='3') Three
						.form-group
							label(for='exampleInputPassword1')
								| Regular Input + Addon
								span.required *
							.input-group
								span#basic-addon1.input-group-addon
									i.fa.fa-star
								input.form-control(type='text' placeholder='Username' aria-describedby='basic-addon1')
						.form-group
							label(for='exampleInputPassword1')
